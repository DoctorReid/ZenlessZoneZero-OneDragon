    background-color: rgba(249, 249, 249, 0.70);
}

LinkCard:hover {
    background-color: rgba(249, 249, 249, 0.65);
    border: 1px solid rgb(220, 220, 220);
}

QWidget {
    background-color: rgba(249, 249, 249, 0.70);
}

